curt-orange = #E64D2C
curt-brown = #343434

box-shadow()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	-ms-box-shadow arguments
	-o-box-shadow arguments
	box-shadow arguments

border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	-ms-border-radius arguments
	-o-border-radius arguments
	border-radius arguments

.align-left
	text-align left
.align-right
	text-align right
.align-center text-align center

.left
	float left
.right
	float right

body
	background url('/img/light_wool.png')

	div.container
		background #F7F6F5

		header
			background curt-brown
			border-top 6px solid curt-orange
			padding-bottom 15px
			box-shadow 3px 3px 3px curt-brown

			a

				img
					width 400px

			span.sub-title
				color #fff
				font-size 20px
				margin-left 15px
				position relative
				top 26px

		section.content
			min-height 200px
			background #fff
			box-shadow 3px 3px 3px #eaeaea
			border-radius 0 0 3px 3px
			padding 50px

			table
				tbody
					tr
						td
							input[type=number].warning
								box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(255, 192, 0, .6)
								border-color rgba(255,192,0,0.8)

							input[type=number].success
								box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(91, 183, 91, .6)
								border-color rgba(91,183,91,0.8)

							input[type=number].error
								box-shadow inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(218, 79, 73, .6)
								border-color rgba(218, 79, 73, 0.8)
							i
								margin-left 5px
								cursor pointer
								padding-top 0
								z-index 1000 // Fix z-index collision between bootstrap and tipsy

			div.page-menu
				margin auto
				min-height 100px
				text-align right

				div.pagination
					float left

				div.upload-btn
					float right
					width 100px
					height 50px

				a.tipsy
					z-index 1000
				
				i
					vertical-align bottom

			form.sale-form 
				span.heading
					display block
					border-bottom 1px solid #eaeaea
					margin 10px 0

				input.span1
					margin 0 5px

		footer
			height 60px

			div.info
				span
					display block
					margin-top 10px
					font-size 10px
					line-height 8px
					color #AEA79F

					a
						color black
						margin-left 5px

			.span2
				img
					margin-top 10px
					width 200px
